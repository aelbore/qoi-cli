{
  "compilerOptions": {
    "baseUrl": ".",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "outDir": "dist",
    "target": "es2017",
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": false,
    "allowSyntheticDefaultImports": true,
    "lib": [
      "ES2019",
      "DOM"
    ],
    "paths": {
      "types": [ "./src/types.ts" ]
    }
  }
}